# Copy to .env and fill in your values
PORT=3002
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/restaurant_platform?schema=reservation

# Downstream microservice URLs (use localhost when running services directly)
IDENTITY_SERVICE_URL=http://localhost:3001
RESTAURANT_SERVICE_URL=http://localhost:3003
TABLE_SERVICE_URL=http://localhost:3004

JWT_ACCESS_SECRET=change_me_access
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=change_me_refresh
JWT_REFRESH_EXPIRES_IN=7d

# Timezone offset for reservation date display (e.g. +05:30 for IST)
APP_TZ_OFFSET=+00:00
